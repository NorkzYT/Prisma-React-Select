generator client {
  provider        = "prisma-client-js"
  output          = "./first-client"
  previewFeatures = ["fullTextSearch"] // [ , "metrics", "tracing"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@postgresql-info:5432/info?schema=public"
}

model Info {
  subject     String   @unique @map(name: "sub")
  information String   @unique @map(name: "info")
  keywords    String   @unique @map("key")
  createdAt   DateTime @default(now()) @map(name: "created_at")
  updatedAt   DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "info")
}